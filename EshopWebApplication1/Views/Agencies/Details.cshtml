@model Eshop.DomainEntities.Domain.Agency

@{
    ViewData["Title"] = "Details";
}

<div class="card" style="margin: 20px;">
    <div class="card-header" style="background-color: #00deb6; color: black;">
        <h2>Details for @Model.Name </h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.Phone</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: white;">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
