@model Eshop.DomainEntities.Domain.Agency

@{
    ViewData["Title"] = "Delete";
}

<div style="background-color: #F2F3F4; padding: 20px; border-radius: 15px; max-width: 600px; margin: auto;">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>

    <div style="background-color: #FFF; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
        <h4>Details for @Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" style="text-align: center;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="width: 100px; background-color: #dc3545; border-color: #dc3545; margin-right: 10px;" />
        <a asp-action="Index" class="btn btn-secondary" style="width: 100px;">Back</a>
    </form>
</div>
